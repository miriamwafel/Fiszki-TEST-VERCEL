generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  isAdmin       Boolean   @default(false)
  isApproved    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sets              FlashcardSet[]
  stories           Story[]
  practiceStats     PracticeStats[]
  settings          UserSettings?
  grammarProgress   UserGrammarProgress[]
  grammarReviews    GrammarReviewSchedule[]
  stickyNotes       StickyNote[]
}

// Ustawienia użytkownika (domyślne dni powtórek itp.)
model UserSettings {
  id                  String   @id @default(cuid())
  // Domyślne dni powtórek (JSON array, np. [1, 5, 15, 35, 90])
  defaultReviewDays   Json     @default("[1, 5, 15, 35, 90]")
  // Max powtórek na dzień przed propozycją przesunięcia
  maxReviewsPerDay    Int      @default(2)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FlashcardSet {
  id          String      @id @default(cuid())
  name        String
  description String?
  language    String      // język, którego się uczymy (np. "en", "de", "es")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Opcjonalne powiązanie z historyjką
  storyId     String?
  story       Story?      @relation(fields: [storyId], references: [id], onDelete: SetNull)

  flashcards  Flashcard[]
  reviews     ReviewSchedule[]

  @@index([userId])
  @@index([storyId])
}

// Harmonogram powtórek dla zestawu
model ReviewSchedule {
  id            String    @id @default(cuid())
  scheduledDate DateTime  // Data zaplanowanej powtórki
  dayOffset     Int       // Oryginalny offset (+1, +5, +15, +35, +90)
  completed     Boolean   @default(false)
  completedAt   DateTime?
  createdAt     DateTime  @default(now())

  setId         String
  set           FlashcardSet @relation(fields: [setId], references: [id], onDelete: Cascade)

  @@index([setId])
  @@index([scheduledDate])
}

model Flashcard {
  id              String   @id @default(cuid())
  word            String   // słowo w nauczanym języku
  translation     String   // tłumaczenie na polski
  context         String?  // dodatkowy kontekst (np. bezokolicznik, przykład użycia)
  partOfSpeech    String?  // część mowy (verb, noun, adjective, etc.)
  infinitive      String?  // bezokolicznik (dla czasowników)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  setId           String
  set             FlashcardSet @relation(fields: [setId], references: [id], onDelete: Cascade)

  practiceStats   PracticeStats[]

  @@index([setId])
}

model Story {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  language    String
  difficulty  String   // A1, A2, B1, B2, C1, C2
  wordCount   Int
  vocabulary  Json?    // Pre-generated słowniczek: { "word": "translation", ... }
  createdAt   DateTime @default(now())

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Zestawy fiszek powiązane z tą historyjką
  sets        FlashcardSet[]

  @@index([userId])
}

model PracticeStats {
  id           String    @id @default(cuid())
  correct      Int       @default(0)
  incorrect    Int       @default(0)
  lastPractice DateTime  @default(now())
  mastered     Boolean   @default(false)

  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  flashcardId  String
  flashcard    Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)

  @@unique([userId, flashcardId])
  @@index([userId])
  @@index([flashcardId])
}

// Postęp użytkownika w modułach gramatycznych
model UserGrammarProgress {
  id              String    @id @default(cuid())
  moduleId        String    // ID modułu z predefiniowanej listy (np. "en_a1_present_simple")
  language        String    // en, de, es, etc.
  level           String    // A1, A2, B1, B2, C1, C2

  // Treść wygenerowana przez AI (teoria + przykłady)
  generatedContent String?  @db.Text

  // Status
  started         Boolean   @default(false)
  completed       Boolean   @default(false)
  completedAt     DateTime?

  // Statystyki ćwiczeń
  exercisesDone   Int       @default(0)
  exercisesCorrect Int      @default(0)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  reviews         GrammarReviewSchedule[]

  @@unique([userId, moduleId])
  @@index([userId])
  @@index([moduleId])
  @@index([language])
}

// Harmonogram powtórek gramatycznych
model GrammarReviewSchedule {
  id              String    @id @default(cuid())
  scheduledDate   DateTime
  dayOffset       Int       // +1, +5, +15, +35, +90
  completed       Boolean   @default(false)
  completedAt     DateTime?
  createdAt       DateTime  @default(now())

  progressId      String
  progress        UserGrammarProgress @relation(fields: [progressId], references: [id], onDelete: Cascade)

  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([progressId])
  @@index([userId])
  @@index([scheduledDate])
}

// Szybkie notatki (sticky notes)
model StickyNote {
  id        String   @id @default(cuid())
  content   String   @db.Text
  color     String   @default("yellow") // yellow, pink, blue, green, purple
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
